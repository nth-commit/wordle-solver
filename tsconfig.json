{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "./lib/",
    "target": "ES2020",
    "sourceMap": true,
    "declaration": true,
    "jsx": "preserve",
    "lib": ["ES2020", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
